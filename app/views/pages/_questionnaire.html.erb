<div class="modal fade" id="questionnaire-modal">
  <%= bootstrap_form_for lead, remote: true do |f| %>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        
        <h4 class="modal-title">Thank you!</h4>
      </div>
      <div class="modal-body">
        <p>Tell us more about your business:</p>

        
          <%= f.form_group :sell_online do %>
            <%= f.check_box :sell_online, label: "I sell products online" %>
          <% end %>
          <%= f.form_group :has_facebook_page do %>
            <%= f.check_box :has_facebook_page, label: "I have a Facebook page" %>
          <% end %>
          <%= f.select :ecommerce_platform, Lead.ecommerce_platforms.keys.to_a.map { |w| [w.humanize, w] } %>
          <div id="other-platform-holder">
            <%= f.text_field :other_platform %>
          </div>
        
      </div>
      <div class="modal-footer">
        
        <button type="submit" class="btn btn-primary">Finish sign up</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
  <% end %>
</div><!-- /.modal -->

